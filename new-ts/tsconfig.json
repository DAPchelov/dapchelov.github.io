{
	"extends": "./typescript/tsconfig.base.json",
	"jsx": "react-jsx",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "src",
		"outDir": "build",
		"paths": {
			"*": [
				"src/*",
				"node_modules/*",
				"typescript/typings/*",
			]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": [
		"src",
		"typescript/typings"
	],
	"exclude": [
		"**/*.test.*",
		"**/*.stories.*",
		"node_modules/*"
	]
} 